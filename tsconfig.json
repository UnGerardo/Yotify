{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2022"],
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": "./",
    "allowJs": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
  },
  "include": ["./src/**/*", "./public/js/**/*"],
  "exclude": ["node_modules", "build"]
}